@page
@model OdeToFood.ListModel
@{
}

@if (Model.Message != null)
{
    <div class="alert alert-success" style="margin-top: 16px">@Model.Message</div>
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="@Model.SearchTerm" name="search" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant"/>
}
<div>
    <a asp-page="./Edit" class="btn btn-primary">Add New</a>
</div>